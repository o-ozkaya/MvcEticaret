@using MvcEticaret.Components;

@model IEnumerable<ProductItemModel>

@await Html.PartialAsync("_Navigation")

<header class="bg-dark py-5">
	<div class="container px-4 px-lg-5 my-5">
		<div class="text-center text-white">
			<h1 class="display-4 fw-bolder">Shop with ₿itcoin</h1>
			<p class="lead fw-normal text-white-50 mb-0">For most used items by chads</p>
		</div>
	</div>
</header>

<section class="py-5">
	<div class="container px-4 px-lg-5 mt-5">
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			@foreach (var item in Model)
			{
				@await Component.InvokeAsync("ProductItem", item)
			}
		</div>
	</div>
</section>

@await Html.PartialAsync("_Footer")